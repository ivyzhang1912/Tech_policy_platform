<!--pages/knowledge_lib_2nd/knowledge_lib_2nd.wxml-->
<!-- <view class="navtit">11</view> -->
<page-meta>
  <navigation-bar title="{{nbtitle}}" front-color="{{nbfontcolot}}" background-color="{{nbbgcolor}}"/>
</page-meta>
<view class="d-container">
    <view class="q">
      <view class="q_input"><input bindconfirm="MsgUp" confirm-type="search" bindinput="search_input" type="text" placeholder="请输入搜索内容"/></view>
      <view class="img" bindtap="MsgUp"><image src="/images/search.png" alt=""/></view>
  </view>

  <view class="choice-box">
    <t-dropdown-menu>
      <t-dropdown-item options="{{choices.options}}" default-value="{{choices.value}}" bindchange="onChange" />
      <!-- <t-dropdown-item options="{{sorter.options}}" default-value="{{sorter.value}}" bindchange="onChange"/> -->
      <t-dropdown-item options="{{timer.options}}" default-value="{{timer.value}}" bindchange="onChange"/>
    </t-dropdown-menu>
  </view>
  <!-- <view class="count">共计X条数据</view> -->
  <view class="proj-type-cnt">
    <view class="hot-policy" wx:for="{{choice_policy}}" wx:key="unique">
      <view class="hot-policy-item" bindtap="tocontent" data-id="{{item.pid}}">
        <view class="item-tit">{{item.title}}</view>
        <text decode="{{true}}" class="item-info">{{item.department}}&nbsp;&nbsp;|&nbsp;&nbsp;{{item.datetime}}</text>
      </view>
    </view>
  </view>
</view>
